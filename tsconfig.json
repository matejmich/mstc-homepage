{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2016",
    "module": "esnext",            // Use ES modules
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
